<p id="notice"><%= notice %></p>


<h1><%= t('mining_types')%></h1>

<table class="table table-hover">
  <thead>
    <tr>
    <th> <%= @mining_types.human_attribute_name(:description) %> </th>
    <th> <%= @mining_types.human_attribute_name(:acronym) %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class:"btn btn-success"%></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class:"btn btn-primary" %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
    <%= link_to t('links.index'), welcome_index_path, class:"btn btn-primary" %> 
    <%= link_to 'New Mining Type', new_mining_type_path, class:"btn btn-success" %>
</div>
